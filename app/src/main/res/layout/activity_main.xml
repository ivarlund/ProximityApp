<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="269dp"
            android:layout_height="149dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/proximityAlert" android:layout_marginBottom="156dp"/>
    <TextView
            android:layout_width="269dp"
            android:layout_height="149dp"
            android:gravity="center"
            android:id="@+id/metalDetector" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="171dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="71dp" android:layout_marginStart="71dp" android:layout_marginBottom="106dp"
            app:layout_constraintBottom_toTopOf="@+id/proximityAlert" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="71dp" android:layout_marginRight="71dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>